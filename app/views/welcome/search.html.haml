.uk-container

  .uk-grid.uk-grid-small
    .uk-width-2-10
      .lefiores-link-box
        %ul.uk-list.uk-list-line
          %li.title Filters
          %li List item 2
          %li List item 3
    .uk-width-8-10
      %h2.head-title
        Flowers & Florists Near 
        = @location.name
      %ul.uk-subnav.uk-subnav-pill{"data-uk-switcher" => "{connect:'#subnav-pill-content-1'}"}
        %li.uk-active{"aria-expanded" => "true"}
          %a{:href => "#"} Flowers
        %li{"aria-expanded" => "false"}
          %a{:href => "#"} Florists
  
      %ul#subnav-pill-content-1.uk-switcher
        %li.uk-active{"aria-hidden" => "false"}
          -#products
          %ul.uk-thumbnav
            -@products.each do |product|  
              %li
                .result-container 
                  .product-store-logo
                    %img.uk-border-circle{:src => "#{product.store.store_logo_url}", :width => "50", :style => "border: 1px solid black"}                  
                  =image_tag(product.pic.m300x320,{:width => 200, :class => "product_img"})
                  .lefiores-name
                    =product.name.upcase
                  .lefiores-store-name
                    =product.store.name
                  .uk-grid.uk-grid-small.lefiores-bottom
                    .lefiores-price.uk-width-1-2                      
                      =number_to_currency(product.price, unit: "RM ")
                    .uk-width-1-2
                      %button.uk-button.uk-button-primary.uk-width-1-1.uk-vertical-align-middle
                        Purchase                  

                  

        %li{"aria-hidden" => "true"}
          -#florists
          - @location.store_branch.each do |branch|
            = branch.store.name
            = 'monicakjdhfka'



:css
  .lefiores-link-box .title {
    background: #eee;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    margin-bottom: -5px;
    padding-left: 10px;
    font-weight: bold
  }
  .lefiores-link-box {
    border: 1px solid #ddd;
    background: #fff;
    border-radius: 5px;
    margin-bottom: 15px;

  }
  .lefiores-link-box ul li {
    padding: 5px 10px;
  }

  .result-container{
    padding: 20px 30px 20px 30px;
    background: #fff;
    border: 1px solid #f0eee4;
  }

  .result-container img{
    margin-bottom: 1em;
    margin-top: 1em;
  }
  .result-container .lefiores-bottom{
    padding-top:5px;

  }

  .lefiores-name{ 
    text-decoration: none;
    font-size: 13px;
    line-height: 16px;
    text-transform: uppercase;
    color: #968e5f;
  }

  .lefiores-store-name{
    padding-top: 5px;
    margin-bottom: 0.1em;
    color: #909090;
    font-size: 13px;
  }

  .lefiores-price{
    font-family: 'Lobster',Arial,cursive;
    font-size: 22px;
    line-height:33px; 
    color: #eb5f60;
  }

  .product-store-logo{
    margin-top: -17px;
    z-index: 9;
    margin-left: -18px;
    position: absolute;
  }

  .result-container .product_img{
    border: 1px dashed rgb(228, 228, 228);
  }
  

