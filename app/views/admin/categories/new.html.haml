%h2.lefiores-head-title
  Add Category 
= form_for(@category, :html=> {:multipart => true,:class => "uk-form uk-form-stacked"},:url => {:controller => 'categories',:action=>"create"}) do |f|
  - if @category.errors.any?
    #error_explanation
    = pluralize(@category.errors.count, "error")
    prohibited this @category from being saved:

    %ul
      - @category.errors.full_messages.each do |message|
        %li= message
  .uk-form-row
    = f.label :name, :class => "uk-form-label"    
    .uk-form-controls
      = f.text_field :name, :class => "uk-width-1-1",:type => "text"      
  .uk-form-row
    = f.label :description, :class => "uk-form-label"    
    .uk-form-controls
      = f.text_area :description, :class => "uk-width-1-1",:type => "text"      
  .uk-form-row
    = f.submit 'Setup My Store', :class => "uk-button uk-button-primary uk-width-1-1"

:css
  h2.lefiores-head-title{
      font-weight: bold;
      border-left: 4px solid #ff0052;
      padding-left: 5px;
      font-size: 20px;
      line-height: 25px;
  }