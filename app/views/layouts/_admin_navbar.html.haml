          %ul.uk-nav.uk-nav-dropdown
            -if current_user.has_store && current_user.role == :florist
              %li
                %a{:href => "/store/dashboard"} 
                  %i.uk-icon-money 
                  My Store            
            %li
              %a{:href => "/logout"} 
                %i.uk-icon-sign-out 
                Logout
      
